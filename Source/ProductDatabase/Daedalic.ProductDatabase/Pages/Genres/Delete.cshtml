@page "{id:int}"
@model Daedalic.ProductDatabase.Pages.Genres.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Genre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
    </dl>

    @if (Model.Genre.Games != null && Model.Genre.Games.Count > 0)
    {
        <div class="alert alert-warning" role="alert">
            This genre has @Model.Genre.Games.Count games associated with it. Deleting the genre will remove it from all of these games.
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="Genre.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
