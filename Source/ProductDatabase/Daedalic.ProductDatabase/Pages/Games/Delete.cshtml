@page "{id:int}"
@model Daedalic.ProductDatabase.Pages.Games.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Developer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Developer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Genre.Name)
        </dd>
    </dl>

    @if (Model.Game.Releases != null && Model.Game.Releases.Count > 0)
    {
        <div class="alert alert-warning" role="alert">
            This game has @Model.Game.Releases.Count releases associated with it. Deleting the game will delete all releases as well.
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="Game.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
