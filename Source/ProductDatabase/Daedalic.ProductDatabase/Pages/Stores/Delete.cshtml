@page "{id:int}"
@model Daedalic.ProductDatabase.Pages.Stores.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Store</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.Name)
        </dd>
    </dl>

    @if (Model.Store.Releases != null && Model.Store.Releases.Count > 0)
    {
        <div class="alert alert-warning" role="alert">
            This store has @Model.Store.Releases.Count releases associated with it. Deleting the store will remove it from all of these releases.
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="Store.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
